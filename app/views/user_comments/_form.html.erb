<%= form_with(model: user_comment, remote: true, format: :js) do |form| %>
<% if user_comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user_comment.errors.count, "error") %>
      prohibited this user_comment from being saved:</h2>

    <ul>
      <% user_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :description %>
  <%= form.text_area :description, cols: 100, rows: 10 %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
